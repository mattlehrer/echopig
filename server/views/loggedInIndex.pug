extends shared/layout
block main-content
  .row.mt-4.justify-content-md-center
    .pl-0
      a.h4(href='/episodes') Hot Episodes
      .row.equal-height.mt-3
        each episode in episodes
          .col-12.col-sm-5.col-md-4.col-lg-3
            .card.mx-0.mb-4
              img.card-img-top.img-fluid(
                  src=episode.image || episode.podcast.artworkUrl600 || episode.podcast.artworkUrl100 || ''
                )
              .card-body
                a.card-text(href=`/p/i${episode.podcast.iTunesID}`) !{episode.podcast.title}
                .h5.mb-0
                  a(href=`/e/${episode.id}`) !{episode.title}
                div.card-text.pt-1.small.font-weight-lighter Published #{relativeTime(episode.releaseDate)}
              .card-footer
                .small.font-weight-light.text-right üêΩ #{episode.posts.length} 
  .row.mt-4.justify-content-md-center    
    .pl-0
      a.h4(href='/podcasts') Hot Podcasts
      .row.equal-height.mt-3
        each podcast in podcasts
          .col-12.col-sm-5.col-md-4.col-lg-3
            .card.mx-0.mb-4
              img.card-img-top.img-fluid(
                  src=podcast.artworkUrl600 || podcast.artworkUrl100 || ''
                )
              .card-body
                a.card-title(href=`/p/i${podcast.iTunesID}`) !{podcast.title}
                if podcast.author
                  div.card-text By #{podcast.author}
              .card-footer
                .small.font-weight-light.text-right üêΩ #{podcast.posts} 
