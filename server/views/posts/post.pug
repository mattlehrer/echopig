extends ../shared/layout

block main-content
  .col-md-6.col-md-offset-3
    form(method="post", action="", class='form-horizontal')
      fieldset
        legend Post Episode
        .form-group
          label.control-label(for="shareURL") Share URL
          input(id="shareURL" class="form-control" type="text" name="shareURL" placeholder="Share URL")
        .form-group
          label.control-label(for="comment") Comment
          input(id="comment" class="form-control" type="text" name="comment" placeholder="Comment on the episode")
        .form-group
          input(type="hidden" name="_csrf" value=csrfToken)
        .form-group
          button(type="reset" class="btn btn-default") Cancel
          button(type="submit" class="btn btn-primary") Submit