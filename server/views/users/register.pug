extends ../shared/layout

block main-content
  .col-md-8.col-md-offset-3
    .py-4.mb-3.border-bottom.border-dark
      .row
        .col.py-1
          a.btn.btn-block.btn-twitter.btn-social(href="/auth/twitter")
            span.fab.fa-twitter.fa-sm
            span Login with Twitter
        .col.py-1
          a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
            span.fab.fa-facebook-f.fa-sm
            span Login with Facebook
    form(method="post", action="", class='form-horizontal')
      fieldset
        legend Or sign up with email and password
        .form-group
          label.control-label(for="username") Username
          input(id="username" class="form-control" type="text" name="username" placeholder="Username")
        .form-group
          label.control-label(for="email") Email
          input(id="email" class="form-control" type="text" name="email" placeholder="Email Address")
        .form-group
          label.control-label(for="password") Password
          input(id="password" class="form-control" type="password" name="password" placeholder="Password")
        .form-group
          label.control-label(for="confirmPassword") Confirm Password
          input(id="confirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password")
        .form-group
          input(type="hidden" name="_csrf" value=csrfToken)
        .form-group
          //- button(type="reset" class="btn btn-default") Cancel
          button(type="submit" class="btn btn-primary") Sign up